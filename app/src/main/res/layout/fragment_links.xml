<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dip">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:fontFamily="@font/material_font"
        android:text="Stadt Garching:"
        android:textColor="@color/text"
        android:textSize="25sp"
        android:textStyle="bold">

    </TextView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/service"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:text="Rathhaus &amp; Service"
        android:textColor="@color/white"
        app:backgroundTint="@color/button_background"
        app:icon="@drawable/administration">

    </com.google.android.material.button.MaterialButton>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/events"
        android:layout_width="match_parent"
        android:layout_height="90dp"

        android:text="Events"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:backgroundTint="@color/button_background"
        app:icon="@drawable/events">

    </com.google.android.material.button.MaterialButton>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/buerger_service"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginBottom="20dip"
        android:text="Bürgerservice-portal"
        android:textColor="@color/white"
        app:backgroundTint="@color/button_background"
        app:icon="@drawable/buergerservice">

    </com.google.android.material.button.MaterialButton>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:fontFamily="@font/material_font"
        android:text="Sonstiges:"
        android:textColor="@color/text"
        android:textSize="25sp"
        android:textStyle="bold">

    </TextView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mvg_messages"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginBottom="20dip"
        android:text="MVg-Störungen"
        android:textColor="@color/white"
        app:backgroundTint="@color/button_background"
        app:icon="@drawable/mvg_alert">

    </com.google.android.material.button.MaterialButton>

</LinearLayout>